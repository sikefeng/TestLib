<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    tools:background="#000"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/guardian_share_complete_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_day_job_dialog_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/close_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_emploteer_close"
        android:layout_marginEnd="28dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="@+id/guardian_share_complete_layout"
        app:layout_constraintTop_toTopOf="@+id/guardian_share_complete_layout" />

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:text="@string/text_job_title"
        android:textColor="@color/job_dialog_title_color"
        android:layout_marginTop="27dp"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guardian_share_complete_layout" />

    <TextView
        android:id="@+id/sub_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_job_sub_title"
        android:textColor="@color/job_dialog_title_color"
        android:textSize="9dp"
        android:includeFontPadding="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_tv" />

    <TextView
        android:id="@+id/bottom_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="26dp"
        android:text="@string/text_job_bottom_line"
        android:textColor="@color/job_dialog_title_color"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/guardian_share_complete_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="26dp"
        android:layout_marginVertical="8dp"
        app:layout_constraintBottom_toTopOf="@+id/bottom_tv"
        app:layout_constraintEnd_toEndOf="@+id/guardian_share_complete_layout"
        app:layout_constraintStart_toStartOf="@+id/guardian_share_complete_layout"
        app:layout_constraintTop_toBottomOf="@+id/sub_title_tv">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fadeScrollbars="false"
            android:scrollbarFadeDuration="0"
            android:scrollbarStyle="outsideOverlay"
            android:scrollbars="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <ViewStub
        android:id="@+id/vs"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:inflatedId="@+id/inflatedStart"
        android:layout="@layout/layout_error_job"
        app:layout_constraintBottom_toTopOf="@+id/bottom_tv"
        app:layout_constraintEnd_toEndOf="@+id/guardian_share_complete_layout"
        app:layout_constraintStart_toStartOf="@+id/guardian_share_complete_layout"
        app:layout_constraintTop_toBottomOf="@+id/sub_title_tv" />

</androidx.constraintlayout.widget.ConstraintLayout>