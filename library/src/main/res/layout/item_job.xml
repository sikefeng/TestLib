<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="66dp"
    android:background="@drawable/ic_job_dialog_item_bg">

    <ImageView
        android:id="@+id/item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:src="@drawable/ic_job_invite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/src_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:fontFamily="sans-serif-medium"
        android:maxLines="1"
        android:textColor="@color/job_dialog_item_title_color"
        android:textSize="14dp"
        app:layout_constraintEnd_toStartOf="@+id/coin_tv"
        app:layout_constraintStart_toEndOf="@+id/item_icon"
        app:layout_constraintTop_toTopOf="@+id/item_icon"
        tools:text="完成一次签到dddddd完成一次签到ProgressBar" />

    <ProgressBar
        android:id="@+id/progressbar"
        style="?android:progressBarStyleHorizontal"
        android:layout_width="117dp"
        android:layout_height="12dp"
        android:max="100"
        android:progress="50"
        android:progressDrawable="@drawable/item_job_progress"
        app:layout_constraintBottom_toBottomOf="@+id/item_icon"
        app:layout_constraintStart_toStartOf="@+id/src_title" />

    <TextView
        android:id="@+id/progress_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/job_dialog_item_pb_txt_color"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/progressbar"
        app:layout_constraintEnd_toEndOf="@+id/progressbar"
        app:layout_constraintStart_toStartOf="@+id/progressbar"
        app:layout_constraintTop_toTopOf="@+id/progressbar"
        tools:text="5648 / 20000" />


    <TextView
        android:id="@+id/coin_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="0"
        android:maxLines="1"
        android:gravity="center_horizontal|end"
        android:paddingHorizontal="6dp"
        android:textColor="@color/job_dialog_item_money_color"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="@+id/action_btn"
        app:layout_constraintEnd_toEndOf="@+id/action_btn"
        android:drawableStart="@drawable/ic_job_crash"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        />


    <TextView
        android:id="@+id/action_btn"
        android:layout_width="wrap_content"
        android:minWidth="60dp"
        android:textAllCaps="false"
        android:paddingHorizontal="2dp"
        android:layout_height="26dp"
        android:gravity="center"
        android:background="@drawable/ic_item_job_btn_get"
        android:text="got"
        android:textColor="@color/job_dialog_item_get_color"
        android:textSize="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="12dp"
        app:layout_constraintTop_toBottomOf="@+id/coin_tv" />
</androidx.constraintlayout.widget.ConstraintLayout>