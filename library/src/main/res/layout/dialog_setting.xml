<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/bg"
        android:layout_width="300dp"
        android:layout_height="355dp"
        android:background="@drawable/ic_setting_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="34dp"
        android:src="@drawable/ic_setting_close"
        app:layout_constraintEnd_toEndOf="@+id/bg"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:fontFamily="sans-serif-medium"
        android:includeFontPadding="false"
        android:text="@string/text_setting"
        android:textColor="@color/setting_txt_color"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/bg"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="@+id/bg"
        app:layout_constraintTop_toTopOf="@+id/bg" />

    <FrameLayout
        android:id="@+id/re_start_fl"
        android:layout_width="260dp"
        android:layout_height="58dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/itme_setting_ripple"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="@+id/bg"
        app:layout_constraintStart_toStartOf="@+id/bg"
        app:layout_constraintTop_toBottomOf="@+id/title">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:drawableStart="@drawable/ic_setting_restart"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:text="@string/text_restart"
            android:textColor="@color/setting_txt_color"
            android:textSize="14dp" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/voice_fl"
        android:layout_width="260dp"
        android:layout_height="58dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/itme_setting_ripple"
        app:layout_constraintEnd_toEndOf="@+id/bg"
        app:layout_constraintStart_toStartOf="@+id/bg"
        app:layout_constraintTop_toBottomOf="@+id/re_start_fl">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:drawableStart="@drawable/ic_setting_sound"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:text="@string/text_sound"
            android:textColor="@color/setting_txt_color"
            android:textSize="14dp" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_compat"
            android:layout_width="48dp"
            android:layout_height="26dp"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="10dp"
            android:textColor="@color/setting_txt_color"
            android:textSize="14dp"
            android:thumb="@drawable/switch_common_thumb"
            app:switchMinWidth="48dp"
            app:track="@drawable/switch_common_track_selector" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/notify_fl"
        android:layout_width="260dp"
        android:layout_height="58dp"
        android:layout_marginTop="5dp"
        android:visibility="gone"
        tools:visibility="visible"
        android:background="@drawable/itme_setting_ripple"
        app:layout_constraintEnd_toEndOf="@+id/bg"
        app:layout_constraintStart_toStartOf="@+id/bg"
        app:layout_constraintTop_toBottomOf="@+id/voice_fl">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:drawableStart="@drawable/ic_setting_connect"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:text="@string/text_notify"
            android:textColor="@color/setting_txt_color"
            android:textSize="14dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="10dp"
            android:drawableEnd="@drawable/ic_feedback_arrow"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:textColor="@color/setting_txt_color"
            android:textSize="14dp" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/feed_back_fl"
        android:layout_width="260dp"
        android:layout_height="58dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/itme_setting_ripple"
        app:layout_constraintEnd_toEndOf="@+id/bg"
        app:layout_constraintStart_toStartOf="@+id/bg"
        app:layout_constraintTop_toBottomOf="@+id/notify_fl">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:drawableStart="@drawable/ic_setting_question"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:text="@string/text_feedback"
            android:textColor="@color/setting_txt_color"
            android:textSize="14dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="10dp"
            android:drawableEnd="@drawable/ic_feedback_arrow"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:textColor="@color/setting_txt_color"
            android:textSize="14dp" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/vc_fl"
        android:layout_width="260dp"
        android:layout_height="58dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/itme_setting_ripple"
        app:layout_constraintEnd_toEndOf="@+id/bg"
        app:layout_constraintStart_toStartOf="@+id/bg"
        app:layout_constraintTop_toBottomOf="@+id/feed_back_fl">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:drawableStart="@drawable/ic_setting_version"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:text="@string/text_version"
            android:textColor="@color/setting_txt_color"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/v_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="14dp"
            android:text="v1.0.1"
            android:textColor="@color/setting_txt_color"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tips"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_gravity="end"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/shape_update_tips_bg" />
    </FrameLayout>

    <TextView
        android:id="@+id/pv_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:includeFontPadding="false"
        android:paddingHorizontal="5dp"
        android:paddingVertical="2dp"
        android:text="@string/text_privacy_policy"
        android:textColor="@color/setting_privacy_color"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/bg"
        app:layout_constraintStart_toStartOf="@+id/bg"
        app:layout_constraintTop_toBottomOf="@+id/vc_fl" />
</androidx.constraintlayout.widget.ConstraintLayout>