<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_marginTop="8dp"
    android:id="@+id/root"
    android:background="@drawable/item_sing_bg_shape"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginHorizontal="1dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/item_sing_top_shape"
        android:gravity="center"
        android:text="Day 1"
        android:textColor="@color/sing_dialog_item_title_color"
        android:textSize="10dp" />



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_above="@+id/crash_tv"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/crash_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/gold_7" />
        </FrameLayout>

        <TextView
            android:id="@+id/crash_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="4dp"
            android:includeFontPadding="false"
            android:text="700"
            android:textColor="@color/sing_dialog_item_money_color"
            android:textSize="12dp" />

        <FrameLayout
            android:id="@+id/singed"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="1dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/item_singed_shape_ok">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_singed" />
        </FrameLayout>
    </RelativeLayout>


</LinearLayout>